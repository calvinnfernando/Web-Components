{
    "plugins": {
      "local": {
        "browsers": [
          "chrome"
        ],
        "browserOptions":{
          "chrome":[
            "window-size=1920x1080",
            "headless",
            "disable-gpu"
          ]
        }
      },
      "istanbub":{
        "dir": "./coverage",
        "reporters": ["text", "lcov"],
        "include":[
          "/packages/lan-button/src/main.js",
          "/packages/lan-slider/src/main.js",
          "/packages/lan-card/src/main.js",
          "/packages/lan-messagebox/src/main.js"
        ]
      }
    }
}